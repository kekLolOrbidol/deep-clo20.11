<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.forresult.SetSizeActivity">

    <EditText
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/set_size_x"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:singleLine="true" android:selectAllOnFocus="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/x_set_error" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/set_size_x"
            app:layout_constraintStart_toStartOf="@+id/set_size_x"
            app:layout_constraintEnd_toEndOf="@+id/set_size_x"/>
    <EditText
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/set_size_y"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/y_set_error" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/set_size_y" app:layout_constraintEnd_toEndOf="@+id/set_size_y"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/set_size_y"/>
    <TextView
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/set_size_x" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/set_size_y" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>
    <Button
            android:text="Yeap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_set_size"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="startEditor"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/x_set_error"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>