<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        android:layout_margin="8dp"
              android:orientation="horizontal"
>
    <TextView android:id="@+id/list_item_lvlname" android:layout_width="0dp" android:layout_height="match_parent"
              android:textAlignment="gravity"
              android:layout_gravity="center_vertical"
              android:layout_weight="0.70"
              android:textSize="18sp"
              android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
              android:layout_marginTop="12dp" android:layout_marginBottom="12dp"
              android:textColor="?attr/actionMenuTextColor"/>
    <Button android:id="@+id/button_add_level"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30" android:text="@string/button_add" android:onClick="addLevel"/>
    <TextView android:id="@+id/list_item_level_id" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="gone"/>

</LinearLayout>